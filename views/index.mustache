<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Booklist</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="container">
      <h1>Book list page</h1>
      <table>
        {{#books}}
          <tr>
            <td>{{book_id}}</td>
            <td>{{title}}</td>
            <td>{{authors}}</td>
            <td>
              <a class="btn btn-primary" href="book/edit/{{book_id}}">Edit</a>
            </td>
            <td>
              <form class="" action="/book/delete/{{book_id}}" method="post">
                <button class="btn btn-danger" type="submit">delete</button>
              </form>
            </td>
          </tr>
        {{/books}}
      </table>
      <div class="actions">
        <a class="btn btn-primary" href="/book/add">New Book</a>
      </div>
    </div>
  </body>
</html>
