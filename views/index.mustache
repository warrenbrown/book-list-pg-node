<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Booklist</title>
  </head>
  <body>
    <h1>Book list page</h1>
    <table>
      {{#books}}
        <tr>
          <td>{{book_id}}</td>
          <td>{{title}}</td>
          <td>{{authors}}</td>
          <td>
            <a href="book/edit/{{book_id}}">Edit</a>
          </td>
          <td>
            <form class="" action="/book/delete/{{book_id}}" method="post">
              <button type="submit">delete</button>
            </form>
          </td>
        </tr>
      {{/books}}
    </table>
  </body>
</html>
